<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=windows-1252" />
    <link rel="stylesheet" type="text/css" href="/Content/style.css" />
    <script type="text/javascript" src="/Scripts/boxOver.js"></script>
</head>


<body>
<div id="main_container">

    <h1> Harun's MVC Web Store</h1>
		
    <div id="main_content">
        <div id="menu_tab">
            <div class="left_menu_corner"></div>
            <ul class="menu">
                <li class="nav1"><a href="/" id="current">Home</a></li>
                <li class="divider"></li>

                <li class="nav2"><a href="/Product/">Store Admin</a></li>
                <li class="divider"></li>

                <li class="nav3"><a href="/Account/LogOn/">LogOn</a></li>
                <li class="divider"></li>

                <li class="nav4"><a href="/Account/LogOff/">LogOff</a></li>
                <li class="divider"></li>

                <li class="nav5"><a href="/Account/Register/">Register</a></li>
                <li class="divider"></li>


            </ul>
            <div class="right_menu_corner"></div>
        </div>
        <!-- end of menu tab -->
			
			
			
        <div class="left_content">
            <p>Select a Category</p>
            @{Html.RenderAction("CategoryMenu", "Category"); }
        </div>
        <!-- end of left content -->
			
			
			
        <div class="center_content">
            @RenderBody()
        </div>
        <!-- end of center content -->
			
			
        <div class="right_content">
            Cart Link:
            @{Html.RenderAction("CartLink", "ShoppingCart"); }
            <hr />
            Cart Summary:
            @{Html.RenderAction("CartSummary", "ShoppingCart"); }
            <hr />
            <p>Select a Supplier</p>

            @{Html.RenderAction("SupplierMenu", "Supplier"); }
        </div>
        <!-- end of right content -->
			
    </div>
    <!-- end of main content -->
		
		
		
    <div class="footer">
        Built with ASP.NET MVC 5.
    </div>
</div>
<!-- end of main_container -->
</body>